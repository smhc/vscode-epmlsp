{
    "name": "vscode-epmlsp",
    "displayName": "vscode-epmlsp",
    "description": "EPM Language Server",
    "version": "0.0.4",
    "publisher": "smhc",
    "engines": {
        "vscode": "^1.36.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Snippets"
    ],
    "keywords": [
        "EPM",
        "LSP"
    ],
    "activationEvents": [
        "onLanguage:epm",
        "onCommand:epmlsp-vscode.activate"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "format": "clang-format --style=LLVM -i --glob=\"{src,test}/*.ts\"",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "jsonc-parser": "^2.1.0",
        "vscode-languageclient": "^5.3.0-next.6",
        "vscode-languageserver": "^5.3.0-next.6",
        "vscode-languageserver-types": "^3.14.0"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "clang-format": "1.2.4",
        "mocha": "^5.2.0",
        "typescript": "^2.0.3",
        "vscode": "^1.1.37"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/smhc/vscode-epmlsp.git"
    },
    "contributes": {
        "languages": [{
            "id": "epm",
            "aliases": ["epm", "epm"],
            "extensions": [".eth", ".epm", ".svt"],
            "firstLine": "^#!/.*\\bepm(_core|testharness)?\\b"
        }],
        "configuration": {
            "type": "object",
            "title": "epmlsp configuration",
            "properties": {
                "epmlsp.path": {
                    "type": "string",
                    "default": "epmlsp",
                    "description": "The path to epmlsp executable"
                },
                "epmlsp.arguments": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "Arguments for epmlsp server"
                }
            }
        },
        "commands": [
            {
                "command": "epmlsp-vscode.activate",
                "title": "Manually activate epmlsp extension"
            }
        ]
    }
}
