{
    "compilerOptions": {
    "module": "Node16",
        "target": "ES2022",
        "moduleResolution": "node16",
        "outDir": "out",
        "lib": ["ES2022"],
        "sourceMap": true,
        "rootDir": ".",
        "esModuleInterop": true,
        "strict": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
    "types": ["node", "vscode", "mocha"]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}